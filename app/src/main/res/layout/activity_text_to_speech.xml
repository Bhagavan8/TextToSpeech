<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToSpeechs">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:id="@+id/llParent">

    <EditText
        android:background="@drawable/edit_text_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/etFirstName"
        android:inputType="textPersonName"
        android:hint="Enter your First Name"
        android:ems="10"
        android:layout_marginTop="40dp"/>

    <EditText
        android:background="@drawable/edit_text_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/etLastName"
        android:inputType="textPersonName"
        android:hint="Enter your Last Name"
        android:ems="10"
        android:layout_marginTop="20dp"/>

    <Button
        android:background="@drawable/button_style"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:id="@+id/btnToSpeech"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_light"
        android:text="Greet"
        android:onClick="toSpeech"
        android:gravity="center_vertical|center_horizontal"
        android:enabled="false"
        android:layout_gravity="center_horizontal"/>


    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="1dp"
        android:id="@+id/textView5"
        android:textColor="@color/colorAccent"
        android:text="Speed"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"/>

    <SeekBar
        android:background="@android:color/holo_orange_light"
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:id="@+id/sbSpeechSpeedSeekBar"
        android:layout_weight="1"
        android:progressDrawable="@drawable/speech_speed_seekbar"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="1dp"
        android:id="@+id/tvSpeechSpeed"
        android:textColor="@color/colorAccent"
        android:text="--"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginRight="20dp"/>

</LinearLayout>


    -<LinearLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="1dp"
        android:id="@+id/textView6"
        android:textColor="@color/colorAccent"
        android:text="Pitch"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"/>

    <SeekBar
        android:background="@android:color/holo_orange_light"
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:id="@+id/sbSpeechPitch"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:progressDrawable="@drawable/speech_speed_seekbar"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="1dp"
        android:id="@+id/tvSpeechPitch"
        android:textColor="@color/colorAccent"
        android:text="--"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginRight="20dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"/>

</LinearLayout>

</android.support.constraint.ConstraintLayout>